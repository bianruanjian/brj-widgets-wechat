      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import BrjExampleMenu from '../components/brj-example-menu'
  import {
    menus
  } from './config'
  export default class HomePage extends wepy.page {
    config = {
      navigationBarTitleText: 'brjui'
    };
    components = {
      'brj-example-menu': BrjExampleMenu
    };
    data = {
      menus
    };
  }
