.border {
  border: 1rpx solid #0a0 !important;
}

.border-top {
  border-top: 1rpx solid #0a0 !important;
}

.border-right {
  border-right: 1rpx solid #0a0 !important;
}

.border-bottom {
  border-bottom: 1rpx solid #0a0 !important;
}

.border-left {
  border-left: 1rpx solid #0a0 !important;
}

.border-white {
  border-color: white;
}

.rounded {
  border-radius: 4px;
}

.rounded-top {
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
}

.rounded-right {
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

.rounded-bottom {
  border-bottom-right-radius: 4px;
  border-bottom-left-radius: 4px;
}

.rounded-left {
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}

.rounded-circle {
  border-radius: 50%;
}

.rounded-0 {
  border-radius: 0;
}
