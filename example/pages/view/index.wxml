<view>
  <example title="view" desc="视图" _pid="{{_pid}}">
    <example-demo title="maxWidth" desc="" _pid="{{_pid}}">
      <db-view custom-class='mt-1 bg-primary'>
        默认
      </db-view>
      <db-view maxWidth='150' custom-class='mt-1 bg-secondary'>
        maxWidth-150px
      </db-view>
    </example-demo>

    <view class='title'>展示 border、spacing、text、colors 等效果</view>
    <example-demo title="border" desc="" _pid="{{_pid}}">
      <db-view borderLeft="true" custom-class='mt-1'>
        左边框
      </db-view>
      <db-view borderTop="true" custom-class='mt-1'>
        顶边框
      </db-view>
      <db-view borderRight="true" custom-class='mt-1'>
        右边框
      </db-view>
      <db-view borderBottom="true" custom-class='mt-1'>
        底边框
      </db-view>
      <db-view borderLeft="true" borderTop="true" borderRight="true" borderBottom="true" custom-class='mt-1'>
        全边框
      </db-view>
    </example-demo>

    <example-demo title="spacing" desc="" _pid="{{_pid}}">
     <db-view custom-class='border text-success'>
        无外边距
      </db-view>
      <db-view custom-class='border text-success'>
        无外边距
      </db-view>
      <db-view marginRight="2" marginLeft="2" custom-class='border'>
        x 轴外边距
      </db-view>
      <db-view marginTop="2" marginBottom="2" custom-class='border'>
        y 轴外边距
      </db-view>
      <db-view marginRight="2" marginLeft="2" marginTop="2" marginBottom="2" custom-class='border'>
        xy 轴外边距
      </db-view>
      <db-view custom-class='padding-width border text-success'>
        无内边距
      </db-view>
      <db-view paddingRight="2" paddingLeft="2" custom-class='padding-width border'>
        x 轴内边距
      </db-view>
      <db-view paddingTop="2" paddingBottom="2" custom-class='padding-width border'>
        y 轴内边距
      </db-view>
      <db-view paddingRight="2" paddingLeft="2" paddingTop="2" paddingBottom="2" custom-class='padding-width border'>
        xy 轴内边距
      </db-view>

      <db-view marginTop="2" custom-class='border'>
        顶外边距
      </db-view>
      <db-view marginBottom="2" custom-class='border'>
        底外边距
      </db-view>
      <db-view marginLeft="2" custom-class='border'>
        左外边距
      </db-view>
      <db-view marginRight="2" custom-class='border'>
        右外边距
      </db-view>

      <db-view paddingTop="2" custom-class='border padding-width'>
        顶内边距
      </db-view>
      <db-view paddingBottom="2" custom-class='border padding-width'>
        底内边距
      </db-view>
      <db-view paddingLeft="2" custom-class='border padding-width'>
        左内边距
      </db-view>
      <db-view paddingRight="2" custom-class='border padding-width'>
        右内边距
      </db-view>


    </example-demo>

    <example-demo title="text" desc="" _pid="{{_pid}}">
      <db-view fontWeight="light" custom-class='mt-1'>
        fontWeight-bold
      </db-view>
      <db-view fontItalic="true" custom-class='mt-1'>
        fontItalic
      </db-view>
      <db-view textDecoration="lineThrough" custom-class='mt-1'>
        textDecoration-lineThrough
      </db-view>
      <db-view alignment="center" custom-class='mt-1'>
        alignment-center
      </db-view>

      <db-view transform="upperCase" custom-class='mt-1'>
        transform
      </db-view>

      <db-view truncate="48" custom-class='mt-1'>
        truncate 数字
      </db-view>
      <db-view wrap="1" custom-class='mt-1  bg-secondary'>
        wrap
      </db-view>
    </example-demo>

    <example-demo title="colors" desc="" _pid="{{_pid}}">
      <db-view textColor="primary" custom-class='mt-1'>
        primary
      </db-view>
      <db-view textColor="secondary" custom-class='mt-1'>
        secondary
      </db-view>
      <db-view textColor="danger" custom-class='mt-1'>
        danger
      </db-view>
    </example-demo>

  </example>

</view>